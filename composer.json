{
    "name": "dotkernel/dot-mapper",
    "type": "library",
    "description": "DotKernel mapper pattern implementation",
    "license": "MIT",
    "authors": [
        {
            "name": "DotKernel Team",
            "email": "team@dotkernel.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "laminas/laminas-servicemanager": "^3.3.0",
        "laminas/laminas-paginator": "^2.7",
        "dotkernel/dot-hydrator": "^2.0",
        "dotkernel/dot-helpers": "^2.0",
        "dotkernel/dot-event": "^2.0",
        "laminas/laminas-dependency-plugin": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^2.3",
        "laminas/laminas-db": "^2.8"
    },
    "suggest": {
        "laminas/laminas-db": "Needed if you use the db mappers"
    },
    "autoload": {
        "psr-4": {
            "Dot\\Mapper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DotTest\\Mapper\\": "test/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev",
            "dev-develop": "2.1-dev"
        }
    }
}
