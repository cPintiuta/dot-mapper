{
  "name": "dotkernel/dot-mapper",
  "type": "library",
  "description": "DotKernel mapper pattern implementation",
  "license": "MIT",
  "authors": [
    {
      "name": "DotKernel Team",
      "email": "team@dotkernel.com"
    }
  ],
  "require": {
    "php": "^7.1",
    "zendframework/zend-servicemanager": "^3.3.0",
    "zendframework/zend-paginator": "^2.7",

    "dotkernel/dot-hydrator": "^1.1",
    "dotkernel/dot-helpers": "^1.0",
    "dotkernel/dot-event": "^0.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8",
    "squizlabs/php_codesniffer": "^2.3",

    "zendframework/zend-db": "^2.8"
  },
  "suggest": {
    "zendframework/zend-db": "Needed if you use the db mappers"
  },
  "autoload": {
    "psr-4": {
      "Dot\\Mapper\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DotTest\\Mapper\\": "test/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev",
      "dev-develop": "1.1-dev"
    }
  }
}
